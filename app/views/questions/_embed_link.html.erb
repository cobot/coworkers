<style>
  #members_widget {
    overflow-x: hidden;
    font-size: 100%;
    line-height: 1.5;
    font-family: 'Open Sans', 'Helvetica Neue', Arial, Helvetica, sans-serif;
    color: #191d2f;
    background-color: #f7fafc;
  }
  #members_widget a,
  #members_widget a:link,
  #members_widget a:visited {
    text-decoration: none;
    color: #207abb;
  }
  #members_widget a:hover,
  #members_widget a:active,
  #members_widget a:focus {
    color: #0b3c66
  }
  #members_widget ul {
    padding: .5rem;
    margin: 0;
  }
  #members_widget ul li {
    list-style: none;
    margin: 0 auto .5rem auto;
    padding: .5rem;
    overflow: hidden;
    background-color: #FFF;
  }
  #members_widget ul li > a  {
    float: left;
  }
  #members_widget img {
    width: 3rem;
    height: 3rem;
    margin: 0 1rem 0 0;
    display: block;
  }

  #members_widget .description {
    float: left;
  }

  #members_widget .description p,
  #members_widget .description dl {
    font-size: .875rem;
  }

  #members_widget .pagination {
    text-align: center;
  }
  #members_widget .pagination a {
    display: inline-block;
    width: 24px;
    height: 24px;
    margin: 4px 6px;
    line-height: 24px;
    text-decoration: none;
    font-size: .75rem;
  }
  #members_widget span {
    display: block;
    width: 100%;
    min-height: 15px;
    vertical-align: top;
    font-size: .75rem;
    color: #5c6072;
  }
</style>
<script type="text/x-template" id="members-template">
  <div id="members_widget">
    <ul>
      {{#memberships}}
        <li>
          <a href="{{url}}"><img src="{{image_url}}"/></a>
          <div class="description">
            <a href="{{url}}">{{name}}</a>
            {{#website}}
              <p>{{website}}</p>
            {{/website}}
            <p>{{profession}}</p>
            <p>{{bio}}</p>
            <dl>
            {{#questions}}
              {{#answer}}
                <dt>{{question}}</dt>
                <dd class="pre">{{answer}}</dd>
              {{/answer}}
            {{/questions}}
            </dl>
          </div>
        </li>
      {{/memberships}}
    </ul>
  </div>
</script>
<script src="https://<%= request.host_with_port %>/javascripts/dug.js"></script>
<script>
  // picture_size: thumb, small, large, xlarge, hd
  dug({
    endpoint: '<%= api_space_url(@space, format: :json, secret: @space.secret, cobot_embed: nil, picture_size: 'small') %>',
    error: function( data ){
      document.getElementById('error-dug').innerHTML = 'Error loading member profiles, sorry.';
    },
    beforeRender: function(data) {
      data.memberships.forEach(function(m) {
        if(m.questions) {
          m.questions.forEach(function(q) {
            for(var key in q) {
              if(q.hasOwnProperty(key)) {
                q.question = key;
                q.answer = q[key];
              }
            }
          });
        }
      });
    },
    template: '#members-template'
  });
</script>
