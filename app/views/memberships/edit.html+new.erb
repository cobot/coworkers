<%= render 'spaces/navigation', space: @space %>

<%= form_for [@space, @membership] do |f| %>
  <div class="grid grid--gutters--huge grid--reverseDirection grid--full tablet-grid--1of2">
    <div class="grid-cell">
      <h2 class="heading--special"><%= @membership.name %></h2>
      <p class="img--avatar"><%= image_tag membership_picture_url(@membership, size: :large) %></p>
      <p>You can change your picture in your <a target="_TOP" href="https://www.cobot.me/account/edit">account settings</a>.</p>
    </div>
    <div class="grid-cell">
      <h2 class="heading--special">General Information</h2>
      <div class="form-block--full">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'input--stretch' %>

        <% unless @space.hide_default_fields? %>
          <h4>Profile</h4>
          <p>
            <%= f.label :website %>
            <%= f.text_field :website, placeholder: 'http://...', class: 'input--stretch', type: 'url' %>
          </p>
          <p>
            <%= f.label :profession %>
            <%= f.text_field :profession, class: 'input--stretch' %>
          </p>
          <p>
            <%= f.label :industry %>
            <%= f.text_field :industry, class: 'input--stretch' %>
          </p>
          <p>
            <%= f.label :bio %>
            <%= f.text_area :bio, placeholder: 'A few lines about you.', class: 'input--stretch' %>
          </p>
          <p>
            <%= f.label :skills %>
            <%= f.text_area :skills, class: 'input--stretch' %>
          </p>

          <h4>Messenger</h4>
          <p>
            <%= f.label :messenger_type, 'Type' %>
            <%= f.select :messenger_type, ['Skype', 'Twitter', 'Jabber'], {}, class: 'input--stretch'  %>
          </p>
          <p>
            <%= f.label :messenger_account, 'Account' %>
            <%= f.text_field :messenger_account, class: 'input--stretch' %>
          </p>
        <% end %>

        <% if @questions.any? %>
          <h4>Additional</h4>
          <% @questions.each.with_index do |question, i| %>
            <p>
              <%= question_input_tags question, i, @answers %>
            </p>
          <% end %>
        <% end %>
      </div>
      <div class="grid grid--gutters grid--full tablet-grid--1of2 top--padded">
        <div class="grid-cell">
          <%= f.submit 'Update Profile', data: {disable_with: 'Saving...'}, class: 'btn btn--full btn--blue input--stretch' %>
        </div>
        <div class="grid-cell">
          <%= link_to 'Remove Profile', [@space, @membership], data: {method: 'delete'}, confirm: 'Really remove that membership?', class: 'remove btn btn--blue input--stretch' %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<p>Note: This information will be visible to your coworkers and every user of this application.</p>

<p><%= link_to 'back', space_membership_path(@space, @membership) %></p>
