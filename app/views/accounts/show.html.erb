<div class="path">Your Spaces</div>

<% if @spaces.any? %>
<table class="list">
  <thead>
    <tr>
      <th>Name</th>
      <th>No. of Members</th>
    </tr>
  </head>
  <tbody>
  <% @spaces.each do |space| %>
    <tr>
      <td class="space"><%= link_to space.name, space %></td>
      <td><%= space.memberships.length %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% else %>
  <p>You are not a member of any space yet.</p>
<% end%>
