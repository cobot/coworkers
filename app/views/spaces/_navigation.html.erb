<% menu do %>
  <%= link_to space.name, space, class: 'link--nav' %>
  <%= link_to "Members", [space, :memberships], class: 'link--nav' %>
  <% if current_user && current_user.admin_of?(space) %>
      <%= link_to 'Settings', space_questions_path(space), class: 'link--nav' %>
  <% end %>
  <% if space && (membership = current_user&.membership_for(space)) %>
    <%= link_to membership.public? ? 'Edit Profile' : 'Set up Profile',
      edit_space_membership_path(space, membership), class: 'link--nav' %>
  <% end %>
<% end %>
