body, body.embed, label, #facebox .body {
  background: <%= @customization[:general][:container_background_color] %>;
  color: <%= @customization[:general][:text_color] %>;
}

body, body.embed, input {
  font-family: <%== @customization[:fonts][:text_font] %>
}

h1, h2, h3, h4, h5, h3 a, h3 a:visited, h3 a:link {
  color: <%= @customization[:general][:headline_color] %>;
  font-family: <%== @customization[:fonts][:headline_font] %>
}

a.btn, a.btn:link, a.btn:visited, button.btn, input.btn, a.btn:hover, button.btn:hover, input.btn:hover, a.action, input.action {
  background-color: <%= @customization[:buttons][:background_color] %>;
  color: <%= @customization[:buttons][:text_color] %>;
  border: none;
  box-shadow: none;
}

a.btn.btn_cancel, button.btn.btn_cancel, input.btn.btn_cancel {
  background-color: <%= @customization[:buttons][:dangerous_background_color] %>;
  color: <%= @customization[:buttons][:dangerous_text_color] %>;
}

a {
  color: <%= @customization[:general][:link_color] %>;
}
